#include <stdio.h>
#include <math.h>
int main(){
    int a,b,c,p;
    double S;
    printf("nhap 3 canh a,b,c: ");
    scanf("%d",&a);
    scanf("%d",&b);
    scanf("%d",&c);
    p=a+b+c;
    S=sqrt(p/2*(p/2-a)*(p/2-b)*(p/2-c));
    if(a*b*c>0){
        if(a+b>c){
            if(b+c>a){
                if(a+c>b){
                    printf("chu vi = %d",p);
                    printf("%c\n");
                    printf("dien tich = %d",S);
                 }else{printf("khong du dieu kien 3 canh");}
            }else{printf("khong du dieu kien 3 canh");}
        }else{printf("khong du dieu kien 3 canh");}
    }else{printf("khong du dieu kien 3 canh");}
}
